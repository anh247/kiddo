{% liquid
    assign sid = section.id
    assign content_width = section.settings.content_width
    assign container = section.settings.container
    assign space = section.settings.space
    assign item_border = section.settings.item_border
%}

<section id="{{ sid }}" class="alz-banner style-02 space-{{ space }}">
    <div class="{{ content_width }}" style="{% if container != blank %}--container:{{ container }}{% endif %}">
        <div class="section-inner">
            <div class="slick-carousel {{ item_border }} grid-box-wrap">
                <div class="items-list grid-box">
                    {% if section.blocks.size > 0 %}
                        {% for block in section.blocks %}
                            {%- render 'banner-style-02', block: block -%}
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>

{% render 'section_style' %}
{% render 'section_style_box' %}

