{%- if section.settings.hidden %}{% break %}{% endif -%}
{%- liquid
    assign sid = section.id
    assign content_width = section.settings.content_width
    assign container = section.settings.container
    assign equal_blocks = section.settings.equal_blocks
-%}

<section id="{{ sid }}" class="alz-footer-bottom footer-bottom{% if equal_blocks %} equal-blocks{% endif %}">
    <div class="{{ content_width }}" style="{% if container != blank %}--container:{{ container }}{% endif %}">
        <div class="section-inner">
            {%- if section.blocks.size > 0 -%}
                {%- for block in section.blocks -%}
                    {% assign align = block.settings.align %}
                    <div class="footer-{{ block.type }} {{ align }}">
                        {% if block.settings.text != blank %}
                            <div class="footer-text">{{ block.settings.text }}</div>
                        {% endif %}
                        {% assign links = linklists[block.settings.menu].links %}
                        {% if links.size > 0 %}
                            <div class="footer-menu">
                                <ul class="alz-menu horizontal">
                                    {%- for link in links -%}
                                        {% render 'header-menu-item', link: link %}
                                    {%- endfor -%}
                                </ul>
                            </div>
                        {% endif %}
                        {% if block.settings.img_payment != blank %}
                            {%- assign img_payment_url = block.settings.img_payment | img_url: '' -%}
                            <div class="footer-payment">
                                <img class="lazyload" src="{{ img_payment_url }}" data-src="{{ img_payment_url }}" loading="lazy" alt="{{ block.settings.img_payment }}"/>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</section>

{%- render 'section_style' -%}

