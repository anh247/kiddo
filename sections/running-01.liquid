{%- if section.settings.hidden %}{% break %}{% endif -%}
{% liquid
    assign sid = section.id
    assign content_width = section.settings.content_width
    assign container = section.settings.container
    assign space = section.settings.space
    assign duration = section.settings.duration
    assign gap = section.settings.gap
    assign delimiter_type = section.settings.delimiter_type
    assign delimiter_cl = section.settings.delimiter_cl
    assign delimiter_width = section.settings.delimiter_width
    assign delimiter_height = section.settings.delimiter_height
%}

<section id="{{ sid }}" class="alz-running style-01 delimiter-{{ delimiter_type }} space-{{ space }}">
    <div class="{{ content_width }}" style="{% if container != blank %}--container:{{ container }}{% endif %}">
        <div class="section-inner">
            {%- if section.blocks.size > 0 -%}
                {% for i in (1..4) %}
                    <div class="inner">
                        {%- for block in section.blocks -%}
                            {% liquid
                                assign text = block.settings.text
                                assign link = block.settings.link
                                assign open_link = block.settings.open_link
                            %}
                            {% if link != blank %}
                                <a class="item" href="{{ link }}" target="{{ open_link }}">
                                    {%- render 'icon', icon: block.settings.icon, icon_img: block.settings.icon_img, icon_svg: block.settings.icon_svg -%}
                                    {%- if text != blank -%}{{ text }}{%- endif -%}
                                </a>
                            {% else %}
                                <p class="item">
                                    {%- render 'icon', icon: block.settings.icon, icon_img: block.settings.icon_img, icon_svg: block.settings.icon_svg -%}
                                    {%- if text != blank -%}{{ text }}{%- endif -%}
                                </p>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endfor %}
            {%- endif -%}
        </div>
    </div>
</section>

{%- render 'section_style' -%}
{%- capture style -%}
    .alz-running{
    {% if duration != blank %}--running-duration:{{ duration }}s;{% endif %}
    {% if gap != blank %}--running-gap:{{ gap }};{% endif %}
    {% if delimiter_cl != blank and delimiter_cl.alpha != 0.0 %}--running-delimiter-cl:{{ delimiter_cl }};{% endif %}
    {% if delimiter_width != blank %}--running-delimiter-w:{{ delimiter_width }}px;{% endif %}
    {% if delimiter_height != blank %}--running-delimiter-h:{{ delimiter_height }}px;{% endif %}
    }
{% endcapture %}
{%- style -%}{{ style | strip_newlines | remove: "  " }}{%- endstyle -%}

