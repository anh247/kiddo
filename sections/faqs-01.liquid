{% liquid
    assign sid = section.id
    assign content_width = section.settings.content_width
    assign container = section.settings.container
    assign space = section.settings.space
    assign sidebar = section.settings.sidebar

    assign link = section.settings.link
    assign open_link = section.settings.open_link
%}

<section id="{{ sid }}" class="alz-faqs style-01 sidebar-tablet space-{{ space }}">
    <div class="{{ content_width }} sidebar-{{ sidebar }}" style="{% if container != blank %}--container:{{ container }}{% endif %}">
        <div class="section-inner">
            <div class="site-main">
                {%- if section.blocks.size > 0 -%}
                    {%- for block in section.blocks -%}
                        <div class="block">
                            {% if block.settings.title %}
                                <h2 class="title">{{ block.settings.title }}</h2>
                            {% endif %}
                            {% if block.settings.q_1 != blank %}
                                <div class="item">
                                    <a class="question" href="javascript:void(0)">{{ block.settings.q_1 }}</a>
                                    <div class="answer">{{ block.settings.a_1 }}</div>
                                </div>
                            {% endif %}
                            {% if block.settings.q_2 != blank %}
                                <div class="item">
                                    <a class="question" href="javascript:void(0)">{{ block.settings.q_2 }}</a>
                                    <div class="answer">{{ block.settings.a_2 }}</div>
                                </div>
                            {% endif %}
                            {% if block.settings.q_3 != blank %}
                                <div class="item">
                                    <a class="question" href="javascript:void(0)">{{ block.settings.q_3 }}</a>
                                    <div class="answer">{{ block.settings.a_3 }}</div>
                                </div>
                            {% endif %}
                            {% if block.settings.q_4 != blank %}
                                <div class="item">
                                    <a class="question" href="javascript:void(0)">{{ block.settings.q_4 }}</a>
                                    <div class="answer">{{ block.settings.a_4 }}</div>
                                </div>
                            {% endif %}
                            {% if block.settings.q_5 != blank %}
                                <div class="item">
                                    <a class="question" href="javascript:void(0)">{{ block.settings.q_5 }}</a>
                                    <div class="answer">{{ block.settings.a_5 }}</div>
                                </div>
                            {% endif %}
                            {% if block.settings.q_6 != blank %}
                                <div class="item">
                                    <a class="question" href="javascript:void(0)">{{ block.settings.q_6 }}</a>
                                    <div class="answer">{{ block.settings.a_6 }}</div>
                                </div>
                            {% endif %}
                            {% if block.settings.q_7 != blank %}
                                <div class="item">
                                    <a class="question" href="javascript:void(0)">{{ block.settings.q_7 }}</a>
                                    <div class="answer">{{ block.settings.a_7 }}</div>
                                </div>
                            {% endif %}
                            {% if block.settings.q_8 != blank %}
                                <div class="item">
                                    <a class="question" href="javascript:void(0)">{{ block.settings.q_8 }}</a>
                                    <div class="answer">{{ block.settings.a_8 }}</div>
                                </div>
                            {% endif %}
                            {% if block.settings.q_9 != blank %}
                                <div class="item">
                                    <a class="question" href="javascript:void(0)">{{ block.settings.q_9 }}</a>
                                    <div class="answer">{{ block.settings.a_9 }}</div>
                                </div>
                            {% endif %}
                        </div>
                    {%- endfor -%}
                {% endif %}
            </div>
            {% if sidebar != 'full' %}
                {% liquid
                    assign title = section.settings.title
                    assign desc = section.settings.desc
                    assign desc_2 = section.settings.desc_2
                    assign btn = section.settings.btn
                    assign link = section.settings.link
                    assign open_link = section.settings.open_link
                    assign btn_2 = section.settings.btn_2
                    assign link_2 = section.settings.link_2
                    assign open_link_2 = section.settings.open_link_2
                %}
                <aside class="sidebar js-stickySidebar">
                    {% if title != blank %}
                        <h2 class="title">{{ title }}</h2>
                    {% endif %}
                    {% if desc != blank %}
                        <div class="desc">{{ desc }}</div>
                    {% endif %}
                    {% if desc_2 != blank %}
                        <div class="desc desc-2">{{ desc_2 }}</div>
                    {% endif %}
                    <div class="button-wrap">
                        {% if btn != blank %}
                            <a class="button" href="{{ link }}" target="{{ open_link }}">{{ btn }}</a>
                        {% endif %}
                        {% if btn_2 != blank %}
                            <a class="button button-2" href="{{ link_2 }}" target="{{ open_link_2 }}">{{ btn_2 }}</a>
                        {% endif %}
                    </div>
                </aside>
            {% endif %}
        </div>
    </div>
</section>

{%- render 'section_style' -%}

<script type="text/javascript">
    $(document).ready(function () {
        $(".alz-faqs .question").click(function () {
            $(this).next(".answer").slideToggle("fast");
            $(this).closest('.item').toggleClass('active');
        });
    });
</script>

