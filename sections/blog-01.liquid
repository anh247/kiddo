{%- liquid
    assign sid = section.id
    assign content_width = section.settings.content_width
    assign container = section.settings.container
    assign space = section.settings.space
    assign limit = section.settings.limit | default: 6
    assign post_style = section.settings.post_style
    assign post_style_list = section.settings.post_style_list
    assign ratio = section.settings.ratio
    if ratio > 0
        assign aspect_ratio = ratio
    endif
    assign title_line = section.settings.title_line
    assign title_equal = section.settings.title_equal
    assign excerpt_line = section.settings.excerpt_line
    assign item_border = section.settings.item_border
    assign stretch_thumb = section.settings.stretch_thumb
    assign use-slider = section.settings.use-slider
    if use-slider
        assign arrows_style = section.settings.arrows_style
    endif
    assign title_style = section.settings.title_style
    assign title = section.settings.title
    assign title_width = section.settings.title_width
    assign title_bd = section.settings.title_bd
    assign title_space = section.settings.title_space | default: 0
-%}

{%- capture s_style -%}
    {% if use-slider %}--arrows-offset:var(--space-{{ title_space }});{% endif %}
    {% if title_line != blank %}--post-title-line:{{ title_line }};{% endif %}
    {% if title_equal == '1' %}
        --post-title-height:calc(var(--post-title-line) * var(--post-title-lh));
    {% elsif title_equal == '0' %}
        --post-title-height:auto;
    {% endif %}
    {% if excerpt_line != blank %}--post-excerpt-line:{{ excerpt_line }};{% endif %}
{%- endcapture -%}

<section id="{{ sid }}" class="alz-blog style-01 {% if post_style_list %}blog-list{% endif %} space-{{ space }} {{ arrows_style }}" style="{{ s_style | strip_newlines | remove: "  " }}">
    <div class="{{ content_width }}" style="{% if container != blank %}--container:{{ container }}{% endif %}">
        <div class="section-inner">
            {% if title != blank %}
                <div class="alz-heading {{ title_style }} {% if title_bd %}title-border{% endif %} space-{{ title_space }}">
                    <h2 class="title" {% if title_width != blank %}style="width:{{ title_width }}"{% endif %}><span class="text">{{ title }}</span></h2>
                </div>
            {% endif %}
            <div class="slick-carousel {{ item_border }} {% unless use-slider %}grid-box-wrap{% endunless %} {% if stretch_thumb %}stretch-thumb{% endif %}">
                <div class="post-list {% if use-slider %}grid-slider js_carousel{% else %}grid-box{% endif %}" {% if use-slider %}{%- render 'grid-slider' -%}{% endif %}>
                    {%- if section.blocks.size > 0 -%}
                        {%- for block in section.blocks -%}
                            {%- assign article = block.settings.article %}
                            {% if article != blank %}
                                {% render 'post-style', post_style: post_style, article: article, aspect_ratio: aspect_ratio %}
                            {%- else -%}
                                {% render 'post-style', post_style: post_style, article: '', aspect_ratio: aspect_ratio %}
                            {%- endif -%}
                        {% endfor %}
                    {%- elsif blogs[section.settings.blog].articles != blank -%}
                        {%- for article in blogs[section.settings.blog].articles limit: limit -%}
                            {% render 'post-style', post_style: post_style, article: article, aspect_ratio: aspect_ratio %}
                        {%- endfor -%}
                    {%- else -%}
                        {% for i in (1..limit) %}
                            {% render 'post-style', post_style: post_style, article: '', aspect_ratio: aspect_ratio %}
                        {% endfor %}
                    {%- endif -%}
                </div>
            </div>
        </div>
    </div>
</section>

{%- render 'section_style' -%}
{%- render 'section_style_box' -%}

