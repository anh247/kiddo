{% liquid
    assign sid = section.id
    assign content_width = section.settings.content_width
    assign container = section.settings.container
    assign space = section.settings.space
    assign layout = section.settings.layout
    assign text_align = section.settings.text_align
    assign link = section.settings.link
    assign open_link = section.settings.open_link
    assign image = section.settings.image
    assign subtitle = section.settings.subtitle
    assign title = section.settings.title
    assign desc = section.settings.desc
%}

<section id="{{ sid }}" class="alz-imagebox style-02 {{ layout }} {{ text_align }} space-{{ space }}">
    <div class="{{ content_width }}" style="{% if container != blank %}--container:{{ container }}{% endif %}">
        <div class="section-inner">
            <div class="image{% if section.settings.image_zoom %} zoom_img{% endif %}">
                {% if image != blank %}
                    {% render 'responsive-image', image: image, url: link, open_link: open_link %}
                {% else %}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-full h-full object-cover' }}
                {% endif %}
            </div>
            <div class="info">
                {% if subtitle != blank %}
                    <h4 class="subtitle">{{ subtitle }}</h4>
                {% endif %}
                {% if title != blank %}
                    <h2 class="title">{{ title }}</h2>
                {% endif %}
                {% if desc != blank %}
                    <div class="desc">{{ desc }}</div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{%- render 'section_style' -%}
{%- liquid
    assign title_cl = section.settings.title_cl
    assign subtitle_cl = section.settings.subtitle_cl
    assign desc_cl = section.settings.desc_cl
-%}
{%- capture style -%}
    #{{ sid }}{
    {% if title_cl != blank and title_cl.alpha != 0.0 %}--title-cl:{{ title_cl }};{% endif %}
    {% if subtitle_cl != blank and subtitle_cl.alpha != 0.0 %}--subtitle-cl:{{ subtitle_cl }};{% endif %}
    {% if desc_cl != blank and desc_cl.alpha != 0.0 %}--desc-cl:{{ desc_cl }};{% endif %}
    }
{%- endcapture -%}
{%- style -%}{{ style | strip_newlines | remove: "  " }}{%- endstyle -%}

