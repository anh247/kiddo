 <link rel="stylesheet" href="{{ 'features01.css' | asset_url }}">
<section class="section-features_frist">
    <div class="container features_frist">
        <div class="img-left__features">
           
           <img src="{{ 'left1.png' | asset_url }}" alt="ảnh bên trái">
        </div>
        <div class="text-center__features">
            <h2>{{ section.settings.heading }}</h2>
            <a href="{{ section.settings.button_link }}">
                <button class="text_button">{{ section.settings.button_text }}</button>
            </a>
        </div>
        <div class="img-right__features">
             <img src="{{ 'right2.png' | asset_url }}" alt="ảnh bên phải">
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Features01",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "Shop our organic cotton year-round and seasonal collections. Start growing naturally"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Discover More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Features01",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
