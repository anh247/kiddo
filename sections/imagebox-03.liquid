{% liquid
    assign sid = section.id
    assign content_width = section.settings.content_width
    assign container = section.settings.container
    assign space = section.settings.space
    assign text_align = section.settings.text_align
    assign use-slider = section.settings.use-slider
%}

<section id="{{ sid }}" class="alz-imagebox style-03 {{ text_align }} space-{{ space }}">
    <div class="{{ content_width }}" style="{% if container != blank %}--container:{{ container }}{% endif %}">
        <div class="section-inner">
            <div class="slick-carousel">
                <div class="items-list {% if use-slider %}grid-slider js_carousel{% else %}grid-box{% endif %}" {% if use-slider %}{%- render 'grid-slider' -%}{% endif %}>
                    {%- if section.blocks.size > 0 -%}
                        {%- for block in section.blocks -%}
                            {% liquid
                                assign image = block.settings.image
                                assign title = block.settings.title
                                assign desc = block.settings.desc
                                assign link = block.settings.link
                                assign open_link = block.settings.open_link
                            %}
                            <div class="item">
                                <div class="image{% if section.settings.image_zoom %} zoom_img{% endif %}">
                                    {% if image != blank %}
                                        {% render 'responsive-image', image: image, url: link, open_link: open_link %}
                                    {% else %}
                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-full h-full object-cover' }}
                                    {% endif %}
                                </div>
                                {% if title != blank %}
                                    <h2 class="title">{{ title }}</h2>
                                {% endif %}
                                {% if desc != blank %}
                                    <div class="desc">{{ desc }}</div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    {%- endif -%}
                </div>
            </div>
        </div>
    </div>
</section>

{%- render 'section_style' -%}
{%- render 'section_style_box' -%}
{%- liquid
    assign title_cl = section.settings.title_cl
    assign desc_cl = section.settings.desc_cl
-%}
{%- capture style -%}
    #{{ sid }}{
    {% if title_cl != blank and title_cl.alpha != 0.0 %}--title-cl:{{ title_cl }};{% endif %}
    {% if desc_cl != blank and desc_cl.alpha != 0.0 %}--desc-cl:{{ desc_cl }};{% endif %}
    }
{%- endcapture -%}
{%- style -%}{{ style | strip_newlines | remove: "  " }}{%- endstyle -%}

