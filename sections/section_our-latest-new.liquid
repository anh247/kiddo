<link rel="stylesheet" href="{{ 'section_our-latest-new.css' | asset_url }}">

<section class="our-latest-new">
  <div class="container">
    <div class="title_our-latest-new">
      <img src="{{ 'Icon_Stars.png' | asset_url }}" alt="">
      <h2>{{ section.settings.heading }}</h2>
      <img src="{{ 'Icon_Crown.png' | asset_url }}" alt="">
    </div>
    <div class="card_blog_medium">
      {% for block in section.blocks %}
        <a href="{{ block.settings.blog_link }}">
          <div class="blog_medium">
            <!-- Hiển thị ảnh blog người dùng chọn từ Admin -->
            <img class="full-width-img" src="{{ block.settings.blog_image | image_url }}" alt="{{ block.settings.blog_image.alt }}">


            <div class="meta_blog_medium">
              <div class="author-meta_blog_medium">
                <img src="{{ 'author.png' | asset_url }}" alt="">
                <p>{{ block.settings.author_name }}</p>
              </div>
                <span>|</span>
              <div class="date-meta_blog_medium">
                <img src="{{ 'date.png' | asset_url }}" alt="">
                <p>{{ block.settings.blog_date }}</p>
              </div>
              <span>|</span>
              <div class="categorie-meta_blog_medium">
                <img src="{{ 'tags.png' | asset_url }}" alt="">
                <p>{{ block.settings.blog_category }}</p>
              </div>
            </div>
            <h3>{{ block.settings.blog_title }}</h3>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Our Latest News ",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Latest News"
    }
  ],
  "blocks": [
    {
      "type": "blog_post",
      "name": "Blog Post",
      "settings": [
        {
          "type": "image_picker",
          "id": "blog_image",
          "label": "Blog Image"
        },
        {
          "type": "text",
          "id": "blog_title",
          "label": "Blog Title",
          "default": "Everything you need to know about family travel"
        },
        {
          "type": "text",
          "id": "blog_link",
          "label": "Blog Link",
          "default": "#"
        },
        {
          "type": "image_picker",
          "id": "author_image",
          "label": "Author Image"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "John Doe"
        },
        {
          "type": "image_picker",
          "id": "date_image",
          "label": "Date Icon"
        },
        {
          "type": "text",
          "id": "blog_date",
          "label": "Blog Date",
          "default": "Nov 10, 2021"
        },
        {
          "type": "image_picker",
          "id": "category_image",
          "label": "Category Icon"
        },
        {
          "type": "text",
          "id": "blog_category",
          "label": "Blog Category",
          "default": "Kids World"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
