{% liquid
    assign sid = section.id
    assign content_width = section.settings.content_width
    assign container = section.settings.container
    assign space = section.settings.space
    assign text_align = section.settings.text_align
    assign per_page = section.settings.per_page | default: 20
%}
{%- liquid
    assign arr_terms = search.terms | split: 'product_type:'
    assign search_terms = arr_terms[0] | strip
    assign search_terms_filter = search_terms | split: '*'
    assign search_terms = search_terms_filter[0] | strip
    assign product_type = arr_terms[1] | strip
-%}
{% liquid
    assign type = ''
    for item in search.results
        case item.object_type
            when 'product'
                assign type = 'product'
            when 'article'
                assign type = 'article'
            when 'page'
                assign type = 'page'
        endcase
    endfor
%}

<section id="{{ sid }}" class="search-page search-type-{{ type }} space-{{ space }}">
    <div class="{{ content_width }}" style="{% if container != blank %}--container:{{ container }}{% endif %}">
        <div class="section-inner">
            <div class="page-head {{ text_align }}">
                <h1 class="page-title">{{ 'general.search.results_with_count' | t: terms: search_terms, count: search.results_count }}</h1>
                {% if search.performed != true or type == '' or search.results_count == 0 %}
                    <h3 class="page-subtitle">{{ 'general.search.no_results_html' | t: terms: search_terms }}</h3>
                {% endif %}
            </div>
            {% if search.performed and type != '' and search.results_count > 0 %}
                {% paginate search.results by per_page %}
                    <div class="grid-box">
                        {% case type %}
                            {% when 'product' %}
                                {% for item in search.results %}
                                    {% render 'product-style', product: item %}
                                {% endfor %}
                            {% when 'article' %}
                                {% for item in search.results %}
                                    {% render 'post-style', article: item %}
                                {% endfor %}
                            {% when 'page' %}
                                {% for item in search.results %}
                                    <div class="post-item">
                                        <h2 class="post-title">
                                            <a href="{{ item.url }}">{{ item.title }}</a>
                                        </h2>
                                        <div class="post-meta post-date">
                                            <span class="month">{{ item.published_at | date: "%b" }}</span>
                                            <span class="day">{{ item.published_at | date: "%d" }}</span>,
                                            <span class="year">{{ item.published_at | date: "%Y" }}</span>
                                        </div>
                                    </div>
                                {% endfor %}
                        {% endcase %}
                    </div>
                    {%- if paginate.pages > 1 -%}
                        {% render 'pagination', paginate: paginate, anchor: '' %}
                    {%- endif -%}
                {% endpaginate %}
            {% endif %}
        </div>
    </div>
</section>

{%- render 'section_style' -%}
{%- render 'section_style_box' -%}

