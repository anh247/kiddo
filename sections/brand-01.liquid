{% liquid
    assign sid = section.id
    assign content_width = section.settings.content_width
    assign container = section.settings.container
    assign space = section.settings.space
    assign hover_effect = section.settings.hover_effect
    assign use-slider = section.settings.use-slider
%}

<section id="{{ sid }}" class="alz-brand style-01 space-{{ space }}">
    <div class="{{ content_width }}" style="{% if container != blank %}--container:{{ container }}{% endif %}">
        <div class="section-inner">
            <div class="slick-carousel {{ section.settings.item_border }}">
                <div class="items-list {% if use-slider %}grid-slider js_carousel{% else %}grid-box{% endif %}" {% if use-slider %}{%- render 'grid-slider' -%}{% endif %}>
                    {%- if section.blocks.size > 0 -%}
                        {%- for block in section.blocks -%}
                            {% liquid
                                assign image = block.settings.image
                                assign link = block.settings.link
                                assign open_link = block.settings.open_link
                            %}
                            <div class="item">
                                <div class="inner effect {{ hover_effect }}">
                                    <div class="image zoom_img">
                                        {% if image != blank %}
                                            {% render 'responsive-image', image: image, url: link, open_link: open_link %}
                                        {% else %}
                                            <div class="alz-image effect-obj">
                                                <span class="brand-text"><strong>brand</strong>logo</span>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {%- endif -%}
                </div>
            </div>
        </div>
    </div>
</section>

{%- render 'section_style' -%}
{%- render 'section_style_box' -%}
{%- liquid
    assign image_width = section.settings.image_width
    assign bg_gradient = section.settings.item_bg_gradient
    assign bg_cl = section.settings.item_bg_cl
    assign pd = section.settings.item_pd
    assign pd_1200 = section.settings.item_pd_1200
    assign pd_992 = section.settings.item_pd_992
    assign pd_768 = section.settings.item_pd_768
-%}
{%- capture style -%}
    #{{ sid }} .inner{
    {% if image_width != blank %}--image-width:{{ image_width }};{% endif %}
    {% if bg_gradient != blank %}background-image:{{ bg_gradient }};{% endif %}
    {% if bg_cl != blank and bg_cl.alpha != 0.0 %}background-color:{{ bg_cl }};{% endif %}
    {% if pd != blank %}padding:{{ pd }};{% endif %}
    }
    {%- if pd_1200 != blank -%}
        @media (max-width: 1199px){
        #b_{{ sid }} .inner{
        {% if pd_1200 != blank %}padding:{{ pd_1200 }};{% endif %}
        }
        }
    {%- endif -%}
    {%- if pd_992 != blank -%}
        @media (max-width: 991px){
        #b_{{ sid }} .inner{
        {% if pd_992 != blank %}padding:{{ pd_992 }};{% endif %}
        }
        }
    {%- endif -%}
    {%- if pd_768 != blank -%}
        @media (max-width: 767px){
        #b_{{ sid }} .inner{
        {% if pd_768 != blank %}padding:{{ pd_768 }};{% endif %}
        }
        }
    {%- endif -%}
{%- endcapture -%}
{%- style -%}{{ style | strip_newlines | remove: "  " }}{%- endstyle -%}

