{%- if section.settings.hidden %}{% break %}{% endif -%}
{%- liquid
    assign sid = section.id
    assign content_width = section.settings.content_width
    assign container = section.settings.container
    assign equal_blocks = section.settings.equal_blocks
-%}

<section id="{{ sid }}" class="alz-header-top header-top {% if equal_blocks %}equal-blocks{% endif %}">
    <div class="{{ content_width }}" style="{% if container != blank %}--container:{{ container }}{% endif %}">
        <div class="section-inner">
            {%- if section.blocks.size > 0 -%}
                {%- for block in section.blocks -%}
                    {% assign hidden_mobile = block.settings.hidden_mobile %}
                    {% assign align = block.settings.align %}
                    <div class="header-{{ block.type }} {{ align }} {{ hidden_mobile }}">
                        {% if block.settings.text != blank %}
                            <div class="header-text">{{ block.settings.text }}</div>
                        {% endif %}
                        {% if block.settings.language %}
                            <div class="header-language">{% render 'header-language' %}</div>
                        {% endif %}
                        {% if block.settings.currency %}
                            <div class="header-currency">{% render 'header-currency' %}</div>
                        {% endif %}
                        {% assign links = linklists[block.settings.menu].links %}
                        {% if links.size > 0 %}
                            <div class="header-menu">
                                <ul class="alz-menu horizontal">
                                    {%- for link in links -%}
                                        {% render 'header-menu-item', link: link %}
                                    {%- endfor -%}
                                </ul>
                            </div>
                        {% endif %}
                        {% if block.settings.customer %}{% render 'header-customer' %}{% endif %}
                        {% if block.settings.compare %}{% render 'header-compare' %}{% endif %}
                        {% if block.settings.wishlist %}{% render 'header-wishlist' %}{% endif %}
                        {% if block.settings.cart %}{% render 'header-cart' %}{% endif %}
                        {% if block.settings.social %}
                            <div class="header-social">{% render 'social_link' %}</div>
                        {% endif %}
                    </div>
                {% endfor %}
            {%- endif -%}
        </div>
    </div>
</section>

{%- render 'section_style' -%}

