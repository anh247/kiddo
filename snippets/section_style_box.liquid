{%- liquid
    assign sid = section.id
    assign cols_number = cols_number | default: section.settings.cols_number
    assign cols_gap = cols_gap | default: section.settings.cols_gap
    assign rows_gap = rows_gap | default: section.settings.rows_gap
-%}
{% if cols_number != '5,5,4,3,3,2' or cols_gap != '30px,30px,20px,20px,16px,10px' or cols_gap != '30px,30px,20px,20px,16px,10px' %}
    {%- capture style -%}
        #{{ sid }}{
        {% if cols_number != blank and cols_number != '5,5,4,3,3,2' %}
            {% assign cols = cols_number | remove: ' ' | split: ',' %}
            {% if cols[0] != blank %}--cols:{{ cols[0] }};{% endif %}
            {% if cols[1] != blank %}--cols-1500:{{ cols[1] }};{% endif %}
            {% if cols[2] != blank %}--cols-1200:{{ cols[2] }};{% endif %}
            {% if cols[3] != blank %}--cols-992:{{ cols[3] }};{% endif %}
            {% if cols[4] != blank %}--cols-768:{{ cols[4] }};{% endif %}
            {% if cols[5] != blank %}--cols-480:{{ cols[5] }};{% endif %}
        {% endif %}
        {% if cols_gap != blank and cols_gap != '30px,30px,20px,20px,16px,10px' %}
            {% assign cols_gap = cols_gap | remove: ' ' | split: ',' %}
            {% if cols_gap[0] != blank %}--cols-gap:{{ cols_gap[0] }};{% endif %}
            {% if cols_gap[1] != blank %}--cols-1500-gap:{{ cols_gap[1] }};{% endif %}
            {% if cols_gap[2] != blank %}--cols-1200-gap:{{ cols_gap[2] }};{% endif %}
            {% if cols_gap[3] != blank %}--cols-992-gap:{{ cols_gap[3] }};{% endif %}
            {% if cols_gap[4] != blank %}--cols-768-gap:{{ cols_gap[4] }};{% endif %}
            {% if cols_gap[5] != blank %}--cols-480-gap:{{ cols_gap[5] }};{% endif %}
        {% endif %}
        {% if cols_gap != blank and cols_gap != '30px,30px,20px,20px,16px,10px' %}
            {% assign rows_gap = rows_gap | remove: ' ' | split: ',' %}
            {% if rows_gap[0] != blank %}--rows-gap:{{ rows_gap[0] }};{% endif %}
            {% if rows_gap[1] != blank %}--rows-1500-gap:{{ rows_gap[1] }};{% endif %}
            {% if rows_gap[2] != blank %}--rows-1200-gap:{{ rows_gap[2] }};{% endif %}
            {% if rows_gap[3] != blank %}--rows-992-gap:{{ rows_gap[3] }};{% endif %}
            {% if rows_gap[4] != blank %}--rows-768-gap:{{ rows_gap[4] }};{% endif %}
            {% if rows_gap[5] != blank %}--rows-480-gap:{{ rows_gap[5] }};{% endif %}
        {% endif %}
        }
    {%- endcapture -%}
    {%- style -%}{{ style | strip_newlines | remove: "  " }}{%- endstyle -%}
{% endif %}
