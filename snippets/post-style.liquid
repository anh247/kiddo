    {% when '2' %}{% render 'post-style-02', blog: blog, article: article, aspect_ratio: aspect_ratio %}
    {% when '3' %}{% render 'post-style-03', blog: blog, article: article, aspect_ratio: aspect_ratio %}
{% endcase %}