<article class="post-item style-03">
    <div class="post-inner">
        {% render 'post-get-image', article: article, aspect_ratio: aspect_ratio %}
        <div class="post-info">
            <div class="post-head">
                {% render 'post-get-date', article: article %}
                {% render 'post-get-title', article: article %}
            </div>
            <div class="post-metas">
                {% render 'post-get-author', article: article %}
                {% render 'post-get-comment-count', article: article %}
            </div>
            {% render 'post-get-excerpt', article: article %}
            {% render 'post-get-readmore', article: article, style: 'button-03' %}
        </div>
    </div>
</article>