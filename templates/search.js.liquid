{%- liquid
	layout none
	assign limit = settings.search_limit | default: 6
	assign results_count = search.results_count
	assign arr_terms = search.terms |split:'product_type:'
    assign search_terms = arr_terms[0] | strip
    assign product_type = arr_terms[1] | strip
   assign on_sale_txt = 'products.product.on_sale' | t
   assign save_js = 'products.product.save_js' | t: saved_amount:'saved_amount' -%}

{%- if results_count > 0 %}{% if results_count > 1 %}.h_results{% else %}.h_result{% endif %}||
    {%- paginate search.results by limit -%}
        {%- for item in search.results %}{% render 'product-style', product: item %}{% endfor -%}
        {%- if paginate.pages > 1 -%}
            <div class="button-wrap"><a href="{{ paginate.next.url | replace: '&page=2', '' | replace: '&view=jsfull', '' | replace: '&view=js', '' }}" class="btn fwsb detail_link">{{ 'general.search.view_all' | t }}({{results_count}}) </a></div>
        {%- endif -%}
    {%- endpaginate -%}
{%- else -%}
    .h_result||{{ 'general.search.no_results_product' | t }}
{%- endif -%}